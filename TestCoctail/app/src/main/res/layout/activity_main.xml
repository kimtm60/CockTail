<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        sl:scale_base_width="1080"
        sl:scale_base_height="1660"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cocktail_home_icon"
            android:src="@drawable/cocktail_home_icon"
            sl:scale_left="340"
            sl:scale_top="400"
            sl:scale_width="400"
            sl:scale_height="400"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="í™ˆ"
            sl:scale_left="510"
            sl:scale_top="850"
            sl:scale_width="90"
            sl:scale_height="100"
            sl:scale_textsize="70"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinema_h_icon"
            android:background="@drawable/effect_button"
            sl:scale_left="50"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>


        <!--ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_h_icon"
            android:src="@drawable/library_icon"
            sl:scale_left="395"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_h_icon"
            android:background="@mipmap/ic_library"
            sl:scale_left="395"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition_h_icon"
            android:background="@mipmap/ic_exhibition"
            sl:scale_left="740"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_delete"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true" />

    </com.ssomai.android.scalablelayout.ScalableLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
