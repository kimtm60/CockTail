<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorBottomtab">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_base_height="1650"
            sl:scale_base_width="1000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소 에티켓 설정"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                sl:scale_height="100"
                sl:scale_left="260"
                sl:scale_textsize="70"
                sl:scale_top="10"
                sl:scale_width="520" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner"
                sl:scale_height="1080"
                sl:scale_left="10"
                sl:scale_top="120"
                sl:scale_width="980">
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_brightness1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_brightness_low_black_24dp"
                sl:scale_height="100"
                sl:scale_left="0"
                sl:scale_top="133"
                sl:scale_width="180"/>

            <SeekBar
                android:id="@+id/custom_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_height="100"
                sl:scale_left="150"
                sl:scale_top="133"
                sl:scale_width="650" />

            <ImageView
                android:id="@+id/ic_brightness2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_brightness_high_black_24dp"
                sl:scale_height="100"
                sl:scale_left="800"
                sl:scale_top="133"
                sl:scale_width="180"/>



            <ImageView
                android:id="@+id/ic_phon2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_android_black_24dp"
                sl:scale_height="111"
                sl:scale_left="0"
                sl:scale_top="320"
                sl:scale_width="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모드변경"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                sl:scale_height="100"
                sl:scale_left="380"
                sl:scale_textsize="70"
                sl:scale_top="325"
                sl:scale_width="270" />

            <com.mingle.myapplication.TriToggleButton
                android:id="@+id/triToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_volume_up_black_24dp"
                sl:scale_height="100"
                sl:scale_left="847"
                sl:scale_top="320"
                sl:scale_width="100">
            </com.mingle.myapplication.TriToggleButton>



            <ImageView
                android:id="@+id/ic_phon1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_forwarded_black_24dp"
                sl:scale_height="111"
                sl:scale_left="0"
                sl:scale_top="507"
                sl:scale_width="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화무음"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                sl:scale_height="100"
                sl:scale_left="380"
                sl:scale_textsize="70"
                sl:scale_top="525"
                sl:scale_width="270" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                sl:scale_height="100"
                sl:scale_left="780"
                sl:scale_top="510"
                sl:scale_width="170"/>

            <ImageView
                android:id="@+id/ic_phon3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_textsms_black_24dp"
                sl:scale_height="111"
                sl:scale_left="0"
                sl:scale_top="704"
                sl:scale_width="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화무음 후 문자전송"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                sl:scale_height="100"
                sl:scale_left="290"
                sl:scale_textsize="50"
                sl:scale_top="712"
                sl:scale_width="470" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                sl:scale_height="100"
                sl:scale_left="780"
                sl:scale_top="697"
                sl:scale_width="170"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_wifi_black_24dp"
                sl:scale_height="111"
                sl:scale_left="0"
                sl:scale_top="891"
                sl:scale_width="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="와이파이"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                sl:scale_height="100"
                sl:scale_left="380"
                sl:scale_textsize="70"
                sl:scale_top="899"
                sl:scale_width="270" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch3"
                sl:scale_height="100"
                sl:scale_left="780"
                sl:scale_top="884"
                sl:scale_width="170"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_brightness_low_black_24dp"
                sl:scale_height="100"
                sl:scale_left="0"
                sl:scale_top="1078"
                sl:scale_width="180"/>

            <SeekBar
                android:id="@+id/custom_seek2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_height="100"
                sl:scale_left="150"
                sl:scale_top="1078"
                sl:scale_width="650" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_brightness_high_black_24dp"
                sl:scale_height="100"
                sl:scale_left="800"
                sl:scale_top="1078"
                sl:scale_width="180"/>



        </com.ssomai.android.scalablelayout.ScalableLayout>
    </ScrollView>
</RelativeLayout>
