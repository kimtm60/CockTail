<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1660"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinema"
            android:src="@drawable/cinema"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1130"
            sl:scale_height="755"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cinema_icon"
            sl:scale_left="240"
            sl:scale_top="450"
            sl:scale_width="600"
            sl:scale_height="450"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cinema_edge"
            sl:scale_left="240"
            sl:scale_top="450"
            sl:scale_width="600"
            sl:scale_height="450"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영화관"
            sl:scale_left="450"
            sl:scale_top="900"
            sl:scale_width="210"
            sl:scale_height="100"
            sl:scale_textsize="70"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_icon"
            android:background="@drawable/home"
            sl:scale_left="50"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_h_icon"
            android:background="@drawable/library_icon"
            sl:scale_left="395"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition_h_icon"
            android:background="@drawable/exhibition_icon"
            sl:scale_left="740"
            sl:scale_top="1010"
            sl:scale_width="300"
            sl:scale_height="300"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈"
            sl:scale_left="160"
            sl:scale_top="1320"
            sl:scale_width="100"
            sl:scale_height="100"
            sl:scale_textsize="60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서관"
            sl:scale_left="460"
            sl:scale_top="1320"
            sl:scale_width="210"
            sl:scale_height="100"
            sl:scale_textsize="60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전시관"
            sl:scale_left="810"
            sl:scale_top="1320"
            sl:scale_width="210"
            sl:scale_height="100"
            sl:scale_textsize="60"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottombar"
        android:elevation="4dp"
        android:background="@color/colorBottomtab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
