<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1660"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exhibition"
            android:src="@drawable/exhibition"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1085"
            sl:scale_height="762"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exhibition_icon"
            sl:scale_left="318"
            sl:scale_top="503"
            sl:scale_width="451"
            sl:scale_height="450"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exhibition_icon_background"
            sl:scale_left="294"
            sl:scale_top="480"
            sl:scale_width="493"
            sl:scale_height="490"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전시관"
            sl:scale_left="450"
            sl:scale_top="990"
            sl:scale_width="210"
            sl:scale_height="100"
            sl:scale_textsize="70"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cinema_icon"
            android:background="@drawable/cinema_icon"
            sl:scale_left="88"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library_h_icon"
            android:background="@drawable/library_icon"
            sl:scale_left="415"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h_icon"
            android:background="@drawable/home"
            sl:scale_left="742"
            sl:scale_top="1100"
            sl:scale_width="250"
            sl:scale_height="250"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cinema_txt"
            sl:scale_left="88"
            sl:scale_top="1380"
            sl:scale_width="250"
            sl:scale_height="40"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/library_txt"
            sl:scale_left="415"
            sl:scale_top="1380"
            sl:scale_width="250"
            sl:scale_height="40"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_txt"
            sl:scale_left="742"
            sl:scale_top="1380"
            sl:scale_width="250"
            sl:scale_height="40"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottombar"
        android:elevation="4dp"
        android:background="@color/colorBottomtab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:id="@+id/toggleButton"
            android:layout_alignTop="@+id/toolbar1"/>


    </android.support.v7.widget.Toolbar>


    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
